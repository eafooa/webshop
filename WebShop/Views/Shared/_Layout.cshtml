                            <form>
                                <label>Full Name</label>
                                <p><input type="text" name="" value="" placeholder="Enter Your Full Name" required=""></p>
                                <label>Email</label>
                                <p><input type="email" name="" value="" placeholder="Enter Your Email" required=""></p>
                                <div>
                                    <button class="btn-proper btn">Send</button>
                                </div>



                            </form>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="">
                            <h4><i class="fa fa-newspaper-o"></i> Recent News</h4>
                            <ul class="unstyled list-link">
                                <li><a href="#">Sed eu leo orci, condimentum gravida metus</a></li>
