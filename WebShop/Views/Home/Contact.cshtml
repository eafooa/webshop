@{
    ViewBag.Title = "Contact";
}

<div class="row">
    <div class="col-md-3">
        <h2>
            <i class="fa fa-home" aria-hidden="true"></i>
            Were are here
        </h2>
        <hr />
        <address>
            Coding Mafia Team<br />
            941 Progress Ave, On, Toronto<br />
            <abbr title="Phone">Phone</abbr>
            647.555.6666
        </address>
        <address>
            <strong>Support:</strong>   <a href="mailto:Support@codingmafia.com">Support@codingmafia.com</a><br />
        </address>
    </div>
    <div class="col-md-9">
        <h2>
            <i class="fa fa-map-marker" aria-hidden="true"></i>
            Location
        </h2>
        <hr />
        <iframe id="map"
                width="100%"
                height="350"
                frameborder="0" style="border:0" scrolling="0" marginheight="0" marginwidth="0"
                src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDgfIS5NLWX19u9naxX8xPJHiDNLk2Pdto&q=Centennial College progress campus, toronto" allowfullscreen></iframe>
        <hr />
        <h2>
            <i class="fa fa-envelope" aria-hidden="true"></i>
            Feel free to send feedback
        </h2>

        <form class="mt5">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>First Name</label>
                        <input type="text" class="form-control mw-100" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Last Name</label>
                        <input type="text" class="form-control mw-100" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control mw-100" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Phone Number</label>
                        <input type="text" class="form-control mw-100" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label>Comment</label>
                <textarea class="form-control mw-100" rows="5"></textarea>
            </div>
            <input type="submit" name="submit" value="Send" class="btn btn-proper pl5 pr5" />
        </form>
    </div>
</div>



